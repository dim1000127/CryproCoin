<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="100"
    android:background="@drawable/style_for_list_element">

    <TextView
        android:id="@+id/position_in_top"
        android:gravity="center"
        android:text="@string/empty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"/>

    <ImageView
        android:id="@+id/image_logo_cryptovalute_list"
        android:padding="4dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:src="@drawable/bnb"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35"
        android:weightSum="100">

        <TextView
            android:id="@+id/name_cryptovalute_list_top"
            android:textSize="8pt"
            android:text="@string/empty"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingStart="4dp"/>

        <TextView
            android:id="@+id/symbol_cryptovalute_list_top"
            android:text="@string/empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:paddingStart="4dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/price_cryptovalute_list_top"
        android:gravity="center"
        android:textSize="8pt"
        android:text="@string/empty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="26"/>


    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="21">

        <TextView
            android:id="@+id/percent_change_cryptovalute_list_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/empty"
            android:textSize="8pt"
            app:drawableStartCompat="@drawable/style_arrow_green" />
    </RelativeLayout>
</LinearLayout>
