<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/top_three_kritovalute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/blockForCryptovaluteOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:background="@drawable/style_for_block_top3cryptovalute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCryptovaluteOne"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/btc" />

                <TextView
                    android:id="@+id/symbolCryptoOne"
                    android:text="BTC"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/percent_change_24hCryptoOne"
                    android:text="2.5%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:id="@+id/priceCryptoValuteOne"
                android:text="43000$"
                android:textSize="14pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockForCryptovaluteTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:background="@drawable/style_for_block_top3cryptovalute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCryptovaluteTwo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eth"/>

                <TextView
                    android:id="@+id/symbolCryptoTwo"
                    android:text="ETH"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/percent_change_24hCryptoTwo"
                    android:text="5.5%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/priceCryptoValuteTwo"
                android:text="3500$"
                android:textSize="14pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockForCryptovaluteThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="3dp"
            android:background="@drawable/style_for_block_top3cryptovalute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCryptovaluteThree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/bnb"/>

                <TextView
                    android:id="@+id/symbolCryptoThree"
                    android:text="BNB"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/percent_change_24hCryptoThree"
                    android:text="1.5%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>

            </LinearLayout>

            <TextView
                android:id="@+id/priceCryptoValuteThree"
                android:text="450$"
                android:textSize="14pt"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/soon"
        android:textSize="10pt"/>-->
</LinearLayout>