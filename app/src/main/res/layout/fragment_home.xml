<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefreshLayoutHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_open_convert_cryptovalute"
            android:text="@string/convert"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/margin_border"
            android:layout_marginEnd="@dimen/margin_border"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/top_three_kritovalute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_border"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/blockForCryptovaluteOne"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/style_for_block_topthreecryptovalute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageCryptovaluteOne"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/symbolCryptoOne"
                        android:text="@string/empty"
                        android:layout_marginStart="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/percent_change_24hCryptoOne"
                        android:text="@string/empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/priceCryptoValuteOne"
                    android:text="@string/empty"
                    android:textSize="12pt"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/blockForCryptovaluteTwo"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp"
                android:background="@drawable/style_for_block_topthreecryptovalute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageCryptovaluteTwo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/symbolCryptoTwo"
                        android:text="@string/empty"
                        android:layout_marginStart="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/percent_change_24hCryptoTwo"
                        android:text="@string/empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/priceCryptoValuteTwo"
                    android:text="@string/empty"
                    android:layout_marginTop="4dp"
                    android:textSize="12pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blockForCryptovaluteThree"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/style_for_block_topthreecryptovalute">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageCryptovaluteThree"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/symbolCryptoThree"
                        android:text="@string/empty"
                        android:layout_marginStart="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/percent_change_24hCryptoThree"
                        android:text="@string/empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/priceCryptoValuteThree"
                    android:text="@string/empty"
                    android:layout_marginTop="4dp"
                    android:textSize="12pt"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soon"
            android:textSize="10pt"/>-->
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>