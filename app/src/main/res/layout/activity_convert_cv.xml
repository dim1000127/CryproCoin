<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="@dimen/margin_border"
        android:padding="8dp"
        android:background="@drawable/style_for_list_element">

        <LinearLayout
            android:id="@+id/view_select_first_asset"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_logo_first_asset"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/tv_symbol_first_asset"
                android:textSize="8pt"
                android:paddingHorizontal="4dp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <EditText
            android:id="@+id/et_value_first_asset"
            android:maxLines="1"
            android:textSize="14pt"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="@dimen/margin_border"
        android:padding="8dp"
        android:background="@drawable/style_for_list_element">

        <LinearLayout
            android:id="@+id/view_select_second_asset"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_logo_second_asset"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tv_symbol_second_asset"
                android:textSize="8pt"
                android:gravity="center"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"
                android:paddingHorizontal="4dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_value_second_asset"
            android:maxLines="1"
            android:textSize="14pt"
            android:gravity="end"
            android:inputType="numberDecimal"
            android:digits="0123456789."
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>